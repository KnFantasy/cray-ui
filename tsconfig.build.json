{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/index.ts",
    "src/components/**/*",
    "src/composables/**/*"
  ],
  "exclude": [
    "src/**/*.test.*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}